{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
  	"comma-dangle": ["error", "always-multiline"]
  },
  "overrides": {
    "files": ["**/test/**/*.js"],
    "rules": {
      "require-yield": 0
    }
  }
}
